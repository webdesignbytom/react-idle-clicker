generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  DEV
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
  game     Game?
}

model Game {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  userId    Int       @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Building {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  type        String
  effect      Int
  cost        Int
  description String
  image       String    @default("ðŸš€")
  owned       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model Item {
  id          Int    @id @default(autoincrement())
  name        String @unique
  type        String
  effect      Int
  cost        Int
  description String
